{
  "tasks": {
    "dev": "deno run --allow-env --allow-net --allow-read --allow-write --watch main.ts",
    "test": "deno test --watch --allow-net"
  },
  "fmt": {
    "singleQuote": true,
    "lineWidth": 100
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  },
  "imports": {
    "@/": "./src/",
    "@std/assert": "jsr:@std/assert@1.0.6",
    "@std/dotenv": "jsr:@std/dotenv@0.225.2",
    "@valibot/valibot": "jsr:@valibot/valibot@0.42.1",
    "@zaubrik/djwt": "jsr:@zaubrik/djwt@3.0.2",
    "mongo": "https://deno.land/x/mongo@v0.33.0/mod.ts"
  }
}
