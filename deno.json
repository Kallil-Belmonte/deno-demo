{
  "tasks": {
    "start": {
      "command": "deno run --env-file --allow-env --allow-net --allow-read --allow-write --watch main.ts",
      "description": "Start the server"
    },
    "dev": {
      "command": "DEV='true' deno run --env-file --allow-env --allow-net --allow-read --allow-write --watch main.ts",
      "description": "Start the server in development mode"
    },
    "test": {
      "command": "DEV='true' deno test --env-file --allow-env --allow-net --allow-read --allow-write --watch",
      "description": "Run all tests"
    },
    "update": {
      "command": "deno outdated --update --latest --interactive",
      "description": "Update the selected packages"
    }
  },
  "fmt": {
    "singleQuote": true,
    "lineWidth": 100
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  },
  "imports": {
    "@/": "./src/",
    "@std/assert": "jsr:@std/assert@1.0.16",
    "@valibot/valibot": "jsr:@valibot/valibot@1.1.0",
    "@zaubrik/djwt": "jsr:@zaubrik/djwt@3.0.2",
    "mongo": "https://deno.land/x/mongo@v0.33.0/mod.ts"
  }
}
